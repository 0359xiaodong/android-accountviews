<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.androidhuman.accountviews.sample.AccountViewXmlActivity">


    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:listSeparatorTextViewStyle"
        android:text="Linear type" />

    <com.androidhuman.accountviews.AccountView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:profileImageSrc="@drawable/ic_launcher"
        custom:primaryText="Taeho Kim"
        custom:secondaryText="jyte82@gmail.com"
        custom:layout="linear"
        />

    <TextView android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="?android:listSeparatorTextViewStyle"
        android:text="Composite type" />

    <com.androidhuman.accountviews.AccountView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        custom:profileImageSrc="@drawable/ic_launcher"
        custom:primaryText="Taeho Kim"
        custom:secondaryText="jyte82@gmail.com"
        custom:layout="composite"
        />

</LinearLayout>
